# settings
alias brightness="sudo vim /sys/class/backlight/intel_backlight/brightness"
alias rmtrash="rm -rf .local/share/Trash/*"
alias chargeMax="sudo bash -c 'echo 0 > /sys/bus/platform/drivers/ideapad_acpi/VPC2004:00/conservation_mode'"
alias chargeCons="sudo bash -c 'echo 1 > /sys/bus/platform/drivers/ideapad_acpi/VPC2004:00/conservation_mode'"
alias colemak="setxkbmap us -variant colemak_dh"
alias qwerty="setxkbmap se -variant qwerty"

# applications
alias r="ranger"
alias vim="nvim"
alias ytest="yarn test --coverage"
alias ytesta="yarn test src --coverage"

# navigation
alias ..="cd .."
alias cdlast="cd -"
alias cdam="cd ~/Documents/work/account-manager"
alias cdww="cd ~/Documents/work/account-manager-web-app"

alias vimam="cd ~/Documents/work/account-manager && vim ."
alias vimww="cd ~/Documents/work/account-manager-web-app && vim ."

alias servww="cd ~/Documents/work/account-manager && scripts/start"
alias servww="cd ~/Documents/work/account-manager-web-app && scripts/dev"

# git
alias ga="git add"
alias gaa="git add ."
alias gaas="git add . && git status"
alias gb="git branch"
alias gbclear="git branch | grep -v 'master\|main\|current_branch' | xargs git branch -D"
alias gbr="git branch -r"
alias gbd="git branch -D"
alias gc="git commit"
alias gclast="git checkout -"
alias gco="git checkout"
alias gcn="git checkout -b"
alias gd="git diff"
alias gdf="git diff --name-only"
alias gdo="git diff origin"
alias gdof="git diff origin --name-only"
alias gds="git diff --staged"
alias gl="git log"
alias glo="git log --oneline"
alias gllast="git log -1"
alias gp="git push"
alias gpo="git push -u origin"
alias grs="git restore --staged ."
alias gs="git status"
alias gst="git stash"
alias gsclear="git add . && git stash && git stash clear"
alias gsls="git stash list"
alias gsp="git stash pop"
alias gss="git stash show"
alias gup="git fetch && git pull"
alias gman="git checkout main"
alias gback="git reset HEAD^"
alias gtree="git log --graph --all --decorate --oneline"

# configs
alias cona="vim ~/.config/dotfiles/aliases"
alias conz="vim ~/.zshrc"
alias vimrc="vim ~/.config"
alias sourc="source ~/.zshrc"
